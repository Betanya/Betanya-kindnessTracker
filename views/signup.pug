extends layout

block layout-content
    h1 Sign Up
    form(method="POST" action="signup")
        label(for="firstname") First Name:
        input#firstname(type="text" required placeholder="Enter first name...")
        br
        label(for="username") Username:
        input#username(type="text" required placeholder="Enter username...")
        br
        label(for="password") Password:
        input#password(type="password" required placeholder="Enter password...")
        br
        label(for="email") Email:
        input#email(type="email" required placeholder="Enter email...")
        br
        input(type="submit" value="Sign Up")